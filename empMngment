ReplaceWord(){
    input originalFile;
    copy in thatString 
    + 
    find(oldword);
    % size_t pos;
    % size_t newWordLen = newWord.length();
    Tod thatString line by line
    thev newword in the pos of the oldword;
    Jod thatString

    output tempfile;
    lihi in tempfile ---> thatString

    delete tempfile;
    rename temfile ---> originalFile
    

}